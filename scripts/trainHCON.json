"iiFile":            "GDB-9/gdb8_HC.h5",
"trainSet":         "/train",
"valSet":           "/val",
"batch.dropLast":   false,
"skipFactor":       50,

"atomTypes":        ["H", "C", "O", "N"],

"radialBasis":      "GaussianRadialBasis",

"rem":              "halfWidth = 0.416 => Eta=16)"
